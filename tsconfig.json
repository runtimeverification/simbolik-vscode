{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "!src/**/*.web.ts",
    "!test/**/*.web.ts"
  ],
  "exclude": [
    "src/react-app",
    "src/extension.web.ts",
    "src/debugAdapter.web.ts",
    "sampleWorkspace",
    "node_modules",
    "vendor"
  ]
}
