{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": [
    "src/react-app",
    "src/extension.web.ts",
    "src/DebugAdapter.web.ts",
    "sampleWorkspace",
    "node_modules",
    "vendor"
  ]
}
