{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build-web",
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "src/react-app",
    "src/extension.ts",
    "src/DebugAdapter.ts",
    "sampleWorkspace",
  ]
}
